<div class="modal fade" id="modalsftp" tabindex="-1" role="dialog" aria-labelledby="modalsftpLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="modalsftpLabel">Crear cuenta sftp</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body p-0">
                <div class="card-body m-0">
                    <div id="">
                        <div class="form-group col-md-12" id="divID">
                            <label for="Usuario">ID</label>
                            <input disabled type="text" class="form-control" name="ID" placeholder="Ingrese el ID" id="h2hID" />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="Usuario">Banco del H2H</label>
                            <select name="Empleado" style="width: 100%" id="nocuenbta" class="form-control" disabled>
                                <option value=""></option>
                                <option value="Kyriba">Kyriba</option>
                                <option value="BCR">BCR</option>
                                <option value="Scotiabank">Scotiabank</option>
                                <option value="BNCR">BNCR</option>
                                <option value="BCT">BCT</option>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="Usuario">Plan</label>
                            <input type="text" class="form-control plan" name="plan" placeholder="Ingrese el plan" id="plan" />
                        </div>
                        <div class="form-group col-md-12" id="divEnvio">
                            <label for="Usuario">Envio</label>
                            <input disabled type="text" class="form-control" name="envio" placeholder="Ingrese el envio" id="envio" />
                        </div>
                        <div class="form-group col-md-12" id="divmoneda">
                            <label for="Empleado">Moneda</label>
                            <select name="Empleado" style="width: 100%" id="moneda" class="form-control">
                                <option value=""></option>
                                <option value="CRC">CRC - Colones</option>
                                <option value="DOL">DOL - Dólares</option>
                            </select>
                        </div>

                        <div class="form-group col-md-12" id="divip">
                            <label for="Usuario">Dirección IP</label>
                            <input type="text" class="form-control ip_address" name="Descripcion" placeholder="Ingrese la dirección IP" id="dirip"/>
                        </div>
                        <div class="form-group col-md-12" id="divpuerto">
                            <label for="Usuario">Puerto</label>
                            <input type="text" class="form-control puerto" name="Descripcion" placeholder="Ingrese el puerto" id="puerto"/>
                        </div>
                        <div class="form-group col-md-12" id="divusuario">
                            <label for="Usuario">Usuario</label>
                            <input type="text" class="form-control" name="Descripcion" placeholder="Ingrese el usuario" id="usu"/>
                        </div>
                        <div class="form-group col-md-12" id="divcontrasena">
                            <label for="Usuario">Contraseña</label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="Descripcion" placeholder="Ingrese la contraseña" id="contra"/>
                                @*<a href="javascript:;" onclick="verContra()" class="input-group-append">
                    <span class="input-group-text">
